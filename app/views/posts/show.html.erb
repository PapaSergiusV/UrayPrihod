<%= render 'shared/nav' %>
<div class="empty-top"></div>

<div class="container admin-panel">
  <div class="row">
    <div class="col-md-6">
      <%= link_to 'Назад', posts_path, class: 'button' %>
    </div>
    <div class="col-md-6">
      <% if user_signed_in? && current_user.admin %>
        <%= link_to 'Редактировать', edit_post_path(@post), class: 'button' %>
        <%= link_to 'Удалить', post_path(@post), method: :delete, class: 'button button-silver',
                                                 data: { confirm: 'Are you sure?' }%>
      <% end %>
    </div>
  </div>
</div>

<div class="container post">
  <div class="row">
    <div class="col-12">
      <h2><%= @post.title %></h2>
    </div>
    <div class="col-12">
      <time><%= @post.created_at.to_date.strftime("%d %B %Y") %></time>
    </div>
    <div class="col-12 first-image">
      <%= image_tag(@post.image.url, alt: 'image') if @post.image? %>
    </div>
    <div class="col-12 text">
      <p><%= @post.content.html_safe %></p>
    </div>
  </div>
</div>

<%= render 'shared/footer' %>