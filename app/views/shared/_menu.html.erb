<% unless current_page?('/') %>
  <div><%= link_to "Главная", root_path %></div>
<% end %>

<% unless current_page?(controller: 'posts') %>
  <div><%= link_to "Новости", posts_path %></div>
<% end %>

<% unless current_page?(controller: 'notes') %>
  <div><%= link_to "Записки онлайн", notes_path %></div>
<% end %>

<% unless current_page?(controller: 'about') %>
  <div><%= link_to "О храме", about_path %></div>
<% end %>

<% unless current_page?(controller: 'questions') %>
  <div><%= link_to "Вопросы", questions_path %></div>
<% end %>

<% unless current_page?(controller: 'about', action: 'schedule') %>
  <div><%= link_to "Расписание", schedule_path %></div>
<% end %>

<% unless current_page?(controller: 'help') %>
  <div><%= link_to "Помощь храму", help_index_path %></div>
<% end %>

